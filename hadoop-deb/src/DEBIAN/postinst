#!/bin/sh
# postinst script for hadoop
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

# LCE 
CONTAINER_EXECUTOR_PATH=/usr/bin/container-executor
HADOOP_HOME=/usr/lib/hadoop/
# log dir
LOG_HOME=/var/log/hadoop
LOG_PREM=0775
# data dir
DATA_HOME=/var/lib/hadoop
DATA_PREM=0750

create_log_dir() {
	mkdir -p $LOG_HOME/$1 || :
	chown $1:hadoop $LOG_HOME/$1
	chmod $LOG_PREM $LOG_HOME/$1
}

create_data_dir() {
	mkdir -p $DATA_HOME/$1
	chown $1:hadoop $DATA_HOME/$1
	chmod $DATA_PREM $DATA_HOME/$1
}

case "$1" in
    configure)
    
	chown root:yarn ${CONTAINER_EXECUTOR_PATH}
	chmod 6050 ${CONTAINER_EXECUTOR_PATH}
	
	mkdir -p $DATA_HOME
	chown root:hadoop $DATA_HOME
	chmod g+w $DATA_HOME
	create_data_dir hdfs
	create_data_dir yarn
	create_data_dir mapred
	
	mkdir -p $LOG_HOME
	chown root:hadoop $LOG_HOME
	chmod g+w $LOG_HOME
	create_log_dir hdfs
	create_log_dir yarn
	# yarn 
	mkdir -p $LOG_HOME/yarn/userlogs
	chown yarn:hadoop $LOG_HOME/yarn/userlogs
	chmod 0755 $LOG_HOME/yarn/userlogs
	create_log_dir mapred
	
	#This seems unused
    mkdir $DATA_HOME/tmp
	chown root:hadoop $DATA_HOME/tmp
	chmod 1777 $DATA_HOME/tmp
    
    ;;  

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;  

    *)  
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;  
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
